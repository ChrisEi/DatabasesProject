doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    title Databases Project
    // Bootstrap
    link(href='css/bootstrap.min.css', rel='stylesheet')
    link(href='css/main.css', rel='stylesheet')
    // my stylesheet
    link(href='css/main.css', rel='stylesheet')
    // fonts
    link(href='https://fonts.googleapis.com/css?family=Source+Code+Pro:600', rel='stylesheet', type='text/css')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body.m_bg
    // navbar component
    nav.navbar.navbar-inverse.fontset
      .container-fluid
        .navbar-header
          a.navbar-brand(href='/') Databases
        ul.nav.navbar-nav
          li
            a(href='/') Home
          li
            a(href='/profile') Profile
          li
            a(href='/decks') Browse Decks
          li
            a(href='/trade') Manage Cards
        ul.nav.navbar-nav.navbar-right
          li
            a(href='/signin') Sign In
          li
            a(href='/signout') Sign Out
    .container
      .row
        .col-sm-offset-4.col-sm-4
          img(src= "http://magiccards.info/scans/en/" + setCode + "/" + setNum + ".jpg", onerror= 'this.src="img/m_cardBack.jpg"').cardBumper
      .row
        .col-sm-offset-2.col-sm-8
          .well.m_well.text-center.col-sm-offset-2.col-sm-8
            h3 #{name}
            h3 #{type}
      .row
        .col-sm-offset-2.col-sm-8
          .well.m_well.text-center.col-sm-offset-2.col-sm-8
            .row
              p.col-sm-6 Power: #{power}
              p.col-sm-6 Toughness: #{toughness}
            .row
              p.col-sm-6 Mana Cost: #{manaCost}
              p.col-sm-6 Converted Mana Cost: #{cmc}
            .row
              p.col-sm-6 Life Penalty: #{life}
              p.col-sm-6 Hand Penalty: #{hand}
            p Text: #{cardText}
            p Flavor:
              i #{flavor}
            p From set: #{setName}, Card No. #{setNum}
            p Rarity: #{rarity}
            p Released: #{releaseDate}
    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    // Include all compiled plugins (below), or include individual files as needed
    script(src='js/bootstrap.min.js')
