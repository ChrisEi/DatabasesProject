      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')

  body.m_bg
    // this is where my code starts!
    // navbar component
    nav.navbar.navbar-inverse.fontset
      .container-fluid
        .navbar-header
          a.navbar-brand(href='/') Databases
        ul.nav.navbar-nav
          li
            a(href='/') Home
          li
            a(href='/profile') Profile
        ul.nav.navbar-nav.navbar-right
          li
            a(href='/signin') Sign In
          li
            a(href='/signout') Sign Out
    // Sign up 'form'
    .container
      .row
        .well.m_well.text-center.col-sm-offset-2.col-sm-8
          .h2 Sign Up for MTG Card Manager!
      .row
        .well.m_well.text-center.col-sm-offset-2.col-sm-8
          label.control-label(for='text').Bumper First Name:
          input#firstname.form-control(type='text', placeholder='' maxlength=15).Bumper
          label.control-label(for='text').Bumper Last Name:
          input#lastname.form-control(type='text', placeholder='' maxlength=15).Bumper
          label.control-label(for='text').Bumper Bio:
          textarea#bio.form-control(placeholder='' maxlength=250 rows=2).Bumper
          label.control-label(for='text').Bumper Phone:
          input#phone.form-control(type='tel', placeholder='' maxlength=10).Bumper
          label.control-label(for='text').Bumper Street:
          input#street.form-control(type='text', placeholder='' maxlength=32).Bumper
          label.control-label(for='text').Bumper City:
          input#city.form-control(type='text', placeholder='' maxlength=32).Bumper
          label.control-label(for='text').Bumper State:
          input#state.form-control(type='text', placeholder='' maxlength=32).Bumper
          label.control-label(for='text').Bumper Zip:
          input#zip.form-control(type='text', placeholder='' maxlength=5).Bumper
          button.btn.btn-success#verify Submit
    // Submit button javascript
    script(type='text/javascript').
      document.getElementById('verify').addEventListener("click", function() {
        var fname = document.getElementById('firstname').value;
        var lname = document.getElementById('lastname').value;
        var b = document.getElementById('bio').value;
        var ph = document.getElementById('phone').value;
        var str = document.getElementById('street').value;
        var ct = document.getElementById('city').value;
        var st = document.getElementById('state').value;
        var zp = document.getElementById('zip').value;
        if (fname == "") {
          alert('Missing a first name!');
          return;
        }
        if (lname == "") {
          alert('Missing a last name!');
          return;
        }
        if (bio == "") {
          alert('Missing a bio!');
          return;
        }
        if (ph == "") {
          alert('Missing a phone number!');
          return;
        }
        if (str == "" || st == "" || ct == "" || zp == "") {
          alert('Address incomplete!');
          return;
        }
        window.location.assign('/editprofile' + '_' + fname + '_' + lname + '_' + b + '_' + ph + '_' + str + '_' + ct + '_' + st + '_' + zp);
        return false;
      });
    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    // Include all compiled plugins (below), or include individual files as needed
    script(src='/js/bootstrap.min.js')
