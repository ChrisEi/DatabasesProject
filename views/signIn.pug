html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    title Databases Project
    // Bootstrap
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='css/main.css', rel='stylesheet')
    // my stylesheet
    link(href='/css/main.css', rel='stylesheet')
    // fonts
    link(href='https://fonts.googleapis.com/css?family=Source+Code+Pro:600', rel='stylesheet', type='text/css')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')

  body.m_bg
    // this is where my code starts!
    // navbar component
    nav.navbar.navbar-inverse.fontset
      .container-fluid
        .navbar-header
          a.navbar-brand(href='/') Databases
        ul.nav.navbar-nav
          li
            a(href='/') Home
          li
            a(href='/profile') Profile
        ul.nav.navbar-nav.navbar-right
          li
            a(href='/signin') Sign In
          li
            a(href='/signout') Sign Out
    // Sign up 'form'
    .container
      .row
        .well.m_well.text-center.col-sm-offset-2.col-sm-8
          .h2 Sign in to access the database!
      .row.Bumper
        .well.m_well.text-center.col-sm-offset-2.col-sm-8
          label.control-label(for='text').Bumper Username:
          input#username.form-control(type='text', placeholder='').Bumper
          label.control-label(for='text').Bumper Password:
          input#pass.form-control(type='password', placeholder='').Bumper
          button.btn.btn-success#signinbutton Sign in
      .row
        .well.m_well.text-center.col-sm-offset-2.col-sm-8
          .h4 Don't have an account?
          button.btn.btn-primary#signupbutton Sign up
      // Sign Up button javascript
      script(type='text/javascript').
        document.getElementById('signupbutton').addEventListener("click", function() {
          window.location.assign('/signup');
          return false;
        });
      // Sign In button javascript
      script(type='text/javascript').
        document.getElementById('signinbutton').addEventListener("click", function() {
          var un = document.getElementById('username').value;
          var ps = document.getElementById('pass').value;
          if (un == "") {
            alert('Missing a username!');
            return;
          }
          if (ps == "") {
            alert('Missing a password!');
            return;
          }
          var newurl = '/signin_' + un + '_' + ps;
          window.location.assign(newurl);
          return false;
        });

    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    // Include all compiled plugins (below), or include individual files as needed
    script(src='/js/bootstrap.min.js')
